pipeline {
  agent any

  stages {
    stage('Build') {
      steps {
        bat 'docker build -t my-spring-boot-app:latest .'
      }
    }

    stage('Run') {
      steps {
        bat 'docker run -d -p 9002:8080 my-spring-boot-app:latest'
      }
    }
    stage('Deploy to k8s'){
            steps{
                bat "kubectl apply -f deployment.yaml --namespace=mini"
         }
     }
  }
}
